<?xml version="1.0" encoding="UTF-8"?>
<root xmlns="urn:schemas-mi-com:device-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <device>
        <type>urn:schemas-mi-com:device:receiver:FileReceiver:1</type>
        <friendlyName>文件接收器</friendlyName>
        <modelNumber>1</modelNumber>
        <modelName>FileReceiver</modelName>
        <modelDescription>文件接收器</modelDescription>
        <modelURL>http://www.mi.com</modelURL>
        <manufacturer>Xiaomi</manufacturer>
        <manufacturerURL>http://www.mi.com</manufacturerURL>
        <serviceList>
             <service>
                <type>urn:schemas-mi-com:service:general:Receiver:1</type>
                <actionList>
                    <action>
                        <name>getStatus</name>
                        <description>查询状态</description>
                        <argumentList>
                            <argument>
                                <name>status</name>
                                <direction>out</direction>
                                <relatedProperty>Status</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                    <action>
                        <name>connect</name>
                        <description>连接</description>
                    </action>
                    <action>
                        <name>disconnect</name>
                        <description>断开连接</description>
                        <argumentList />
                    </action>
                    <action>
                        <name>send</name>
                        <description>发送消息</description>
                        <argumentList>
                            <argument>
                                <name>message</name>
                                <direction>in</direction>
                                <relatedProperty>Message</relatedProperty>
                            </argument>
                        </argumentList>
                    </action>
                </actionList>
                <propertyList>
                    <property gettable="false" notifiable="false" settable="false">
                        <name>Message</name>
                        <description>消息</description>
                        <dataType>string</dataType>
                    </property>
                    <property gettable="true" notifiable="false" settable="false">
                        <name>Status</name>
                        <description>工作状态</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>Ready</allowedValue>
                            <allowedValue>Busy</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="false" notifiable="true" settable="false">
                        <name>ConnectionStatus</name>
                        <description>连接状态</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>WaitConnect</allowedValue>
                            <allowedValue>Connected</allowedValue>
                            <allowedValue>ConnectFailed</allowedValue>
                            <allowedValue>Disconnected</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="false" notifiable="true" settable="false">
                        <name>ReceptionStatus</name>
                        <description>接收状态</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>Waiting</allowedValue>
                            <allowedValue>Ready</allowedValue>
                            <allowedValue>Accept</allowedValue>
                            <allowedValue>Reject</allowedValue>
                            <allowedValue>RejectKickOff</allowedValue>
                            <allowedValue>InsufficientStorage</allowedValue>
                            <allowedValue>ConnectFail</allowedValue>
                            <allowedValue>ConnectCancel</allowedValue>
                        </allowedValueList>
                    </property>
                    <property gettable="false" notifiable="true" settable="false">
                        <name>DownloadStatus</name>
                        <description>下载状态</description>
                        <dataType>string</dataType>
                        <allowedValueList>
                            <allowedValue>Ready</allowedValue>
                            <allowedValue>Downloading</allowedValue>
                            <allowedValue>DownloadPerFileFinished</allowedValue>
                            <allowedValue>DownloadFinished</allowedValue>
                            <allowedValue>DownloadFailed</allowedValue>
                            <allowedValue>DownloadCancelled</allowedValue>
                        </allowedValueList>
                    </property>
                </propertyList>
            </service>
        </serviceList>
    </device>
</root>
