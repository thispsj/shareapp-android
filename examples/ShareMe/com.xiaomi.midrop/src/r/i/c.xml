<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:title="Additional settings">
	<SwitchPreference android:title="Keep display awake" android:key="stayAwake" android:summary="Don&apos;t let display sleep while using FTP" android:defaultValue="true" />
	<com.xiaomi.miftp.view.RadioButtonPreferenceCategory android:title="Transfer encoding" android:key="pref_charset">
		<com.xiaomi.miftp.view.RadioButtonPreference android:persistent="false" android:title="UTF-8" android:key="pref_charset_utf8" android:summary="System FTP default encoding" />
		<com.xiaomi.miftp.view.RadioButtonPreference android:persistent="false" android:title="GBK" android:key="pref_charset_gbk" android:summary="Simplified Chinese Windows default encoding" />
		<com.xiaomi.miftp.view.RadioButtonPreference android:persistent="false" android:title="BIG5" android:key="pref_charset_big5" android:summary="Traditional Chinese Windows default encoding" />
	</com.xiaomi.miftp.view.RadioButtonPreferenceCategory>
	<PreferenceCategory android:title="Security">
		<com.xiaomi.miftp.view.MyEditTextPreference android:selectAllOnFocus="true" android:maxLength="5" android:title="Port number" android:key="portNum" android:inputType="0x2" />
		<SwitchPreference android:title="Sign in anonymously" android:key="anonymous_login" android:defaultValue="true" android:disableDependentsState="true" />
		<com.xiaomi.miftp.view.AccountPreference android:title="Sign in" android:key="pref_ftp_account" android:dependency="anonymous_login" />
	</PreferenceCategory>
</PreferenceScreen>
